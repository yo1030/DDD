<Window x:Class="DDD.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="直近値"
                        Width="100"
                        Command="{Binding WeatherLatestButton}"></Button>
                <Button Content="List"
                        Width="100"
                        Command="{Binding WeatherListButton}"></Button>
                <Button Content="Save"
                        Width="100"
                        Command="{Binding WeatherSaveButton}"></Button>
            </StackPanel>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </StackPanel>
        <StatusBar VerticalAlignment="Bottom">
            <ProgressBar Height="20"
                         Width="150"
                         Value="{Binding ProgressBarValue}">
            </ProgressBar>
            <Label Content="{Binding ProgressBarText}"></Label>
            <Separator></Separator>
            <Label Content="{Binding StatusLabel}"></Label>
        </StatusBar>
    </Grid>
</Window>
